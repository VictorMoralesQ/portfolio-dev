---
import { TypeFlags } from "typescript"
import Python from "./icons/Python.astro"
import Github from "./icons/Github.astro"

const TAGS = {
    PYTHON: {
        name: "Python",
        class: "bg-[#003159] text-white",
        icon: Python
    },
}

const PROJECTS = [
    {
        title: "House Price California",
        description: "A model build to predict a house price of California based in some metrics.",
        github: "https://github.com/VictorMoralesQ/california_housing",
        image: "public/projects/california_housing.webp",
        tags: [TAGS.PYTHON]
    }
]
---
<div class="flex flex-col gap-y-16 w-full md:w-full lg:w-1/2 p-3">
{
    PROJECTS.map(({title, description, tags, image, github}) =>(
    <div class="bg-[#1f1e1d]/75 rounded-lg overflow-hidden shadow-md">
        <img class="w-full" src={image} alt={title} />
        <div class="p-4">
            <h4 class="text-xl font-semibold mb-2">{title}</h4>
            <p class="text-gray-300/80">{description}</p>
            <div class="mt-2">
                {tags.map((tag) =>(
                    <span class={`inline-flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-3`}>
                        <tag.icon class="size-5" />
                        {tag.name}
                        </span>
                ))}
            </div>
            <a href={github} class="mt-4 flex justify-center rounded bg-[#389547] hover:bg-[#337a35] text-white font-normal py-2 px-4" target="_blank" rel="noopener noreferrer">
                <Github class="size-5 flex flex-row my-auto mr-2"></Github>    
                Source code ></a>
        </div>
    </div> 
    ))
}
</div>