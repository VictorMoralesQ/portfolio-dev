---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Badge from '../components/Badge.astro';
import Linkedin from '../components/icons/Linkedin.astro'
import SocialPill from '../components/SocialPill.astro';
import Github from '../components/icons/Github.astro';
import Mail from '../components/icons/Mail.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import BriefCase from '../components/icons/BriefCase.astro';
import Code from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro'

---

<Layout 
	title="Víctor Morales' Portfolio - Web Developer & Data Science Student"
	description="Contact me in order to create innovative solutions">
	<main class="px-4">
		<SectionContainer class="py-44 pb-32">
		<img 
    	class="rounded-full size-12 mb-3" 
    	src="../IMG_2774-min.jpeg" 
    	alt="vmxrls photo"
    	/>
		<h1 class="text white text-2xl md:text-3xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
			Hey, I'm Víctor Morales <a href="https://www.linkedin.com/in/v%C3%ADctor-morales-5a4403265/" 
			target="_blank"
			rel="noopener" 
			class="flex justify-center items-center">
				<Badge>Available for work</Badge>
		</a>
		</h1>
		<h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]"> 

			<span class="text-yellow-200/90 ">
				Web Developer 
				& Data Science Student.</span>
			<span class="opacity-75">Currently pursuing studies in data science while actively honing skills in web development. 
			Passionate about leveraging technology to create innovative solutions.</span>
			<span class="text-red-200/90"> From Barcelona, Spain.</span>
		</h2>
		<nav class="flex gap-4 mt-8 flex-wrap">
			<SocialPill href="https://www.linkedin.com/in/v%C3%ADctor-morales-5a4403265/">
				<Linkedin class="size-4 md:size-6"/>
				LinkedIn
			</SocialPill>
			<SocialPill href="https://github.com/VictorMoralesQ">
				<Github class="size-4 md:size-6"/>
				GitHub
			</SocialPill>
			<SocialPill href="mailto:victormorales1999@gmail.com">
				<Mail class="size-4 md:size-6"/>
				victormorales1999@gmail.com
			</SocialPill>
		</nav>
		</SectionContainer>

		<SectionContainer id="experience">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<BriefCase class="size-7"></BriefCase>
				Working Experience
			</h2>
			<Experience/>
		</SectionContainer>

		<SectionContainer id="projects">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Code class="size-7"></Code>
				Projects
			</h2>
			<Projects/>
		</SectionContainer>
			
			
	</main>
</Layout>

